<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RodoLift</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RodoLift.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Quicksand:wght@300..700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg fixed-top kanit-bold-italic navbar-light">
            <div class="container-fluid">
                <div class="aPlace col-lg-8 col-xxl-9 col-9">
                    <a class="navbar-brand " asp-action="Index" asp-controller="Home"><img src="img/logo/noBg/AF - logotipo RODOLIFT _ preto.png" alt=""></a>
                    <a class="navbar-brand none" asp-action="Index" asp-controller="Home"><img src="img/logo/noBg/AF - logotipo RODOLIFT _ branco_verde.png" alt=""></a>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" asp-action="AboutUs" asp-controller="Home" >Sobre</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Details" asp-controller="Home">Equipamentos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled" href="#">Serviços</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled">Contactar</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <script>
        const navEl = document.querySelector('.navbar');
        const navImg = document.querySelector('.navbar-brand');
        const navNone = document.querySelector('.none');
        window.addEventListener('scroll', () => {
            if (window.scrollY >= 43) {
                navEl.classList.add('navbar-scrolled');
                navEl.classList.add('navbar-dark');
                navEl.classList.remove('navbar-light');
                navImg.classList.add('none');
                navNone.classList.remove('none');

            } else {
                navEl.classList.remove('navbar-scrolled');
                navImg.classList.remove('none');  
                navNone.classList.add('none');
                navEl.classList.remove('navbar-dark');
                navEl.classList.add('navbar-light');
            }
        });</script>
    @RenderBody()
    <footer>
        <div class="top-sec">
            <div class="footer-logo"> <img src="~/img/logo/noBg/AF - logotipo RODOLIFT _ branco_verde.png" class="f-img" /></div>
            <div class="contact-info  poppins-semibold ">
                <p class="f-p-2 ">geral@rodolift.com <span style="color:#84bd00;">.</span></p>
                <div class="socialMedia">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-facebook" viewBox="0 0 16 16">
                        <path d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951" />
                    </svg>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-linkedin" viewBox=" 0 16 16">
                        <path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z" />
                    </svg>
                </div>
                 <p class="f-p-3">263 655 999 <span style="color:#84bd00;">.</span> 937 544 112</p>
            </div>
        </div>
        <div class="legal">
		    <p class="f-p-1">Direitos reservados &copy; desenvolvido por Bomsite</p>
            <p class="f-p-4">Política de Privacidade . Livro de Reclamações Online</p>
        </div>
    </footer>   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
